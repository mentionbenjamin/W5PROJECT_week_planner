<div class="day-notes-container">

  <a href="#reference-to-form"> <!-- click on plus dot to open form -->
    <label for="day-dot-add">
      <img class="add-dot add" src="/images/add-note.svg">
    </label>
  </a>

  <h1 class="day-notes-header">
    notes for
    <mark class="note-mark">
      <%= @dayname.downcase %>...
    </mark>
  </h1>

  <table>
    <% for note in @day.notes %>
      <tr>
        <td>
          <div class="individual-note-container-parent">
            <div class="individual-note-container-child">
              <div class="actual-note">
                <%= note.title %>
                <hr class="note-spacer-hr">
                <span class="note-description">
                  <%= note.description %>
                </span>
              </div>
            </div>
          </div>

          <form method="post" action="/notes/<%= note.id %>/delete">
            <button type="submit"
                   style="border: 0;
                      background: transparent;
                          cursor: pointer;
                           float: right;
                    margin-right: 100px;
                      margin-top: 34px;
                         opacity: 0.3;">
              <img class="delete-icon"
                     src="/images/delete.svg"
                   width="23px"
                     alt="submit" />
            </button>
          </form>
        </td>
      </tr>
    <% end %>
  </table>
</div>


<!-- CLICK AROUND TO EACH DAY FROM WITHIN ANY DAY  -->
<!-- DAILY DOTS START -->
<div class="day-dots-nav-container">
  <input type="checkbox" id="click-dot">
  <label for="click-dot-nav">
    <% @days.each do |day| %>
      <a href="/days/<%= day.id %>">
        <img class="day-notes-dot-nav <%= day.day.downcase %>"
               src="/images/home-<%=day.day.downcase%>.svg">
      </a>
    <% end %>
  </label>
</div>
<!-- DAILY DOTS END -->


<!--- POP UP FORM WINDOW START --->

<div id="reference-to-form" class="reference-to-form-container">
  <a href="#" class="anywhere-exit-window"></a>
  <div class="pop-up-box">
    <!--- ADD FORM START --->
    <form class="add-form" method="post" action="/planner">
      <div class="form-contents-container">
        <h1 class="form-header">
          <mark class="note-mark">before</mark> you forget...
        </h1>
        <br>
        <label for="add note"></label>
        <br>
        <div id="input-box-container">
          <input class="input-box"
          autocomplete="off"
                  type="text"
         textarea name="title"
           placeholder="add a note..."></textarea>
           <span class="ph"></span>
        </div>
        <br><br>
        <div id="input-box-container">
          <input class="input-box"
          autocomplete="off"
                  type="text"
         textarea name="description"
           placeholder="tell me more..."></textarea>
           <span class="ph"></span>
        </div>
        <br>
        <div class="weekday-checkbox-header">assign to a day...</div>
        <div class="weekday-checkbox-container">
          <% for day in @days  %>
          <div class="each-checkbox">
            <input type="checkbox"
                   name="day_array[]"
                  value="<%= day.id  %>"
                     id="<%= day.day.downcase %>">
            <label for="<%= day.day.downcase %>">.</label>
            <br>
          </div>
          <% end %>
        </div>
        <input class="submit" type=image src="/images/add.svg">
      </div>
    </div>
  </form>
    <!--- ADD FORM END --->
</div>
